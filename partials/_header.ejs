<div class="header">
  <% if (user) { %>
     <p class="userInfo">Logged in as: <%= user.email %></p>
     <p class="userInfo"><a href="/urls">My Urls</a></p>
     <form action="/logout" method="POST" class="logout">
       <input type="submit" value="Logout">
     </form>
  <% } %>
  <% if (!user) { %>
     <p class="userInfo">Please <a href="/login">Login</a> or <a href="/register">Register</a></p>
  <% } %>
  <h1 class="headerTitle">Tiny<span style="color: black;">App</span></h1>
  <p class="slogan">Make your URL's shorter</p>
</div>
